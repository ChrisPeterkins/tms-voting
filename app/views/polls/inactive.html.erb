<% if current_user && current_user.admin? %>
  <div class="row">
    <div class="col">
      <div class="center-box">
        <p class="vote-text">There are no elections happening right now, 
                              please check back later!</p>
        <%= button_to 'Create Poll', new_poll_path, :class => 'button purple-btn' %>
      </div>
    </div>
  </div>
<% elsif current_user %>
  <div class="row">
    <div class="col">
      <div class="center-box">
        <p class="vote-text">There are no elections happening right now, 
                              please check back later!</p>
      </div>
    </div>
  </div>
<% else %>
  <div class="center-box">
   <p class="vote-text">You need to be logged in to participate in elections!</p>
     <div class="wrapper">
   <%= button_to 'Log In', login_path, :class => 'button purple-btn' %>
   </div>
 </div>
<% end %>